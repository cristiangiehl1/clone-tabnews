{
  "name": "curso-dev",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "Cristian Giehl",
  "type": "module",
  "main": "src/pages/index.tsx",
  "scripts": {
    "dev": "trap \"npm run services:stop\" INT EXIT && npm run services:up && npm run services:wait:database && npm run migrations:build && npm run migrations:up && next dev",
    "build": "npm run migrations:build && next build",
    "start": "next start",
    "test": "trap \"npm run services:stop\" INT EXIT && npm run services:up && npm run migrations:build && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:wait:database": "node --experimental-transform-types src/infra/scripts/wait-for-postgres.ts",
    "migrations:create": "node-pg-migrate --migrations-dir src/infra/migrations --migration-file-language ts create",
    "migrations:up": "node-pg-migrate --migrations-dir src/infra/migrations --envPath .env.development --tsconfig tsconfig.json up",
    "migrations:down": "node-pg-migrate --migrations-dir src/infra/migrations --envPath .env.development --tsconfig tsconfig.json down",
    "migrations:build": "tsc -p tsconfig.build.json",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:secretlint:check": "npx secretlint \"**/*\"",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "async-retry": "1.3.3",
    "bcryptjs": "^3.0.2",
    "chance": "^1.1.13",
    "cookie": "^1.0.2",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "lucide-react": "0.516.0",
    "next": "15.3.3",
    "next-connect": "1.0.0",
    "pg": "8.16.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "set-cookie-parser": "^2.7.1",
    "swr": "^2.3.3",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@secretlint/secretlint-rule-preset-recommend": "10.1.0",
    "@types/async-retry": "1.4.9",
    "@types/chance": "^1.1.7",
    "@types/jest": "29.5.14",
    "@types/pg": "8.15.4",
    "@types/react": "19.1.8",
    "@types/set-cookie-parser": "^2.4.10",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.29.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "28.14.0",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "9.1.7",
    "jest": "29.6.2",
    "node-pg-migrate": "8.0.2",
    "prettier": "3.5.3",
    "secretlint": "10.1.0",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
